generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  passwordHash String
  role         Role          @default(USER)
  lastLogin    DateTime?
  createdAt    DateTime      @default(now())
  transactions Transaction[]
}

model Transaction {
  id        String   @id @default(cuid())
  type      String
  amount    Float
  category  String
  date      DateTime
  note      String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([userId])
}

enum Role {
  USER
  ADMIN
}
